<?xml version="1.0"?>
<project name="StrategyGame" basedir="." default="build">
    <property file="build.properties"/>

    <target name="clean">
        <delete dir="${build.dir}"/>
    </target>

    <target name="build" depends="clean">
        <mkdir dir="${build.dir}"/>

        <javac destdir="${build.dir}">
            <src path="${src.dir}"/>
        </javac>
    </target>
</project>
